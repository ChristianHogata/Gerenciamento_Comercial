<!DOCTYPE html>
<html lang="en">
  <%- include("inc/head/head") -%>
<body>

  <%- include("inc/header/nav_menu")-%>
  <%- include("inc/header/alertsCustom")-%>
  <%- include("modals/modalTravaTela")-%>
  

<div class="container  align-items-center justify-content-center" style="height: 100vh;">
  <div class="card text-center">
      <div class="card-header">
          <ul class="nav nav-tabs card-header-tabs">
            <li class="nav-item">
              <a class="nav-link active"  data-toggle="tab" href="#Pesquisa" role="tab" aria-controls="pesquisa" aria-selected="true">Pesquisa</a>
            </li>
            <li class="nav-item">
              <a class="nav-link "  data-toggle="tab" href="#dados" role="tab" aria-controls="dados" aria-selected="true">Novo Registro</a>
            </li>
          </ul>
      </div>

      <div class="card-body">
          <div style="margin-top: 10px; margin-bottom: 10px; margin-left: 10px; margin-right: 10px;">

            <br>
            
            <div name="Data" style="display: none;"> 
              <form action="/clientes" class="CadForm" method="POST" name="form" id="formCad">
                <div class="row">
                  <div class=" col-sm-2">
                    <label for="codigo">Código</label>
                    <input class="form-control" type="text" name="id" id="id" disabled>
                  </div>
                </div>

                <br>
        
                <div class="row">
                  <div class="col-sm-4">
                    <label for="nome" style="text-align: left;">Nome</label>
                    <input class="form-control" type="text" name="nome" id="nome" disabled data-tipoDado="string">
                  </div>

                  <div class="col-sm-4">
                    <label for="sobrenome">Sobrenome</label>
                    <input class="form-control" type="text" name="sobrenome" id="sobrenome" disabled data-tipoDado="string">
                  </div>

                  <div class="col-sm-4">
                    <label for="passaporte">Passaporte</label>
                    <input class="form-control" type="text" name="passaporte" id="passaporte" disabled>
                  </div>
                </div>

                <br><br>

                <div class="row">
                  <div class=" col-sm-4">
                    <label for="provincia">Estado</label>
                    <input class="form-control" type="text" name="provincia" id="provincia" disabled data-tipoDado="string">
                  </div>

                  <div class="col-sm-4">
                    <label for="cidade">Cidade</label>
                    <input class="form-control" type="text" name="cidade" id="cidade" disabled data-tipoDado="string">
                  </div>

                  <div class="col-sm-4">
                    <label for="endereco">Endereço</label>
                    <input class="form-control" type="text" name="endereco" id="endereco" disabled>
                  </div>
     
                </div>

                <br>

                <div class="row">
                  <div class=" col-sm-4">
                    <label for="referencia">Observação</label>
                    <input class="form-control" type="text" name="referencia" id="referencia" disabled>
                  </div>

                  <div class="col-sm-4">
                    <label for="cep">Cep</label>
                    <input class="form-control" inputmode="numeric" type="text" name="cep" id="cep" minlength="8" maxlength="8" OnKeyPress="formatar('###-####', this)" disabled data-tipoDado="number">
                  </div>

                  <div class="col-sm-4">
                    <label for="numero">Numero</label>
                    <input class="form-control" type="text" inputmode="numeric" name="numero" id="numero" disabled data-tipoDado="number">
                  </div>

                </div>
                  
 
                <br><br>

                <div class="row">
                  <div class="col-sm-4">
                    <label for="email" >E-mail</label>
                    <input class="form-control" type="email"  name="email" id="email" disabled >
                  </div>

                  <div class="col-sm-4">
                    <label for="telefone1">Telefone</label>
                    <input class="form-control" type="text" inputmode="numeric"  name="telefone1" id="telefone1" placeholder="81 XXX XXXX-XXXX"  type="text" maxlength="16" pattern="\[0-9]{2}\ [0-9]{4,6}-[0-9]{3,4}$" minlength="16" OnKeyPress="formatar('## ### ####-####', this)" disabled data-tipoDado="number">
                  </div>
 
                  <div class="col-sm-4">
                    <label for="telefone2">Tel Fixo</label>
                    <input class="form-control" type="text"  inputmode="numeric" name="telefone2" id="telefone2" placeholder="XXXX XX XXXX"  type="text"  maxlength="12" pattern="\[0-9]{2}\ [0-9]{4,6}-[0-9]{3,4}$" minlength="12" OnKeyPress="formatar('#### ## ####', this)" disabled data-tipoDado="number">
                  </div>
                </div>

                <br>

                <div class="modal-footer  bg-light" id="btns">
                 
                </div>


              </form>
            </div>

            <div name="List" >

              <div class="row">
                <div class="col-sm-10" id="SearchBox">
                    <input class="form-control Produtos Clientes" type="text" placeholder="Digite o nome do cliente" name="Clientes">
                </div>

                <div class="col-sm-2"> 
                    <button class="btn btn-primary form-control" name="Clientes" id="search">
                      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                        <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
                      </svg>
                    </button>
                </div>

              </div>


              <br>

              <div class="row">
                <div class="table-responsive" style="height: 50vh;">
                  <table class="table table-hover tablesorter table-sm table-bordered m-0 tabela" id="listaClientes">
                    <thead>
                      <tr class="listarCabecalho">
                        <th class="col-xs text-center header" scope="col">Código</th>
                        <th class="col-xs header headerSortDown" scope="col">Razão Social</th>
                        <th class="col-xs header" scope="col">Nome Fantasia</th>
                        <th class="col-xs header" scope="col">Cidade</th>
                        <th class="col-xs text-center header" scope="col">Estado</th>
                      </tr>
                    </thead>
                    <tbody id="tbCliente">

                      <% object.forEach(function(row){ %>
                      <tr class="zebra grid">
                        <th scope="row" name="codigo" class="col-xs text-center"><%= row.id %></th>
                        <td class="col-xs"><%= row.nome %></td>
                        <td class="col-xs"><%= row.sobrenome %></td>
                        <td class="col-xs"><%= row.cidade %></td>
                        <td class="col-xs"><%= row.provincia %></td>

                                
                      </tr>
                      <% }); %>
                    </tbody>
                    <tfoot>
                    </tfoot>
                  </table>
                </div>	
              </div>  
            </div>
          </div>
        </div>
      </div>
    </div>
    <%- include("inc/footer-scripts/footer-scripts")-%>
  </body>
</html>