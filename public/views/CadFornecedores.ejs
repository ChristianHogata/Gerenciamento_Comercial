
<!DOCTYPE html>
<html lang="en">
    <%- include("inc/head/head") -%>
<body>
    
    <%- include("inc/header/nav_menu")-%>
    <%- include("inc/header/alertsCustom")-%>
    <%- include("modals/modalTravaTela")-%>


<div class="container  align-items-center justify-content-center" style="height: 100vh;">
  <div class="card text-center">
      <div class="card-header">
          <ul class="nav nav-tabs card-header-tabs">
            <li class="nav-item">
              <a class="nav-link active" data-toggle="tab" href="#Pesquisa" role="tab" aria-controls="pesquisa" aria-selected="true">Pesquisa</a>
            </li>
            <li class="nav-item">
              <a class="nav-link"  data-toggle="tab" href="#dados" role="tab" aria-controls="dados" aria-selected="true">Novo Registro</a>
            </li>
          </ul>
      </div>

      <div class="card-body">
          <div style="margin-top: 10px; margin-bottom: 10px; margin-left: 10px; margin-right: 10px;">

            
            <div name="Data" style="display: none;"> 
            <form action="/fornecedores" class="CadForm" method="POST" name="form" id="formCad">
                    <div class="row">
                        <div class="col-sm-2">	
                            <label for="id" class="col-form-label">Código</label>
                            <input type="text" id="id"  name="id" class="form-control form-control-sm" readonly="" disabled>
                        </div>
            
                    </div>	
                    
                    <br>
            
                    <div class="row">
                        <div class="col-sm-4">	
                            <label for="razao_social" class="col-form-label">Razão Social</label>
                            <input type="text"  name="razao_social"  class="form-control form-control-sm inputs" placeholder="" disabled data-tipoDado="string">
                        </div>
            
                        <div class="col-sm-4">	
                            <label for="nome_fantasia" class="col-form-label">Nome Fantasia</label>
                            <input type="text"  name="nome_fantasia"  class="form-control form-control-sm inputs" disabled data-tipoDado="string">
                        </div>
                        
                        <div class="col-sm-4">	
                            <label for="email" class="col-form-label email">e-mail</label>
                            <input type="email"  name="email" class="form-control form-control-sm inputs" disabled>
                        </div>
                    </div>
            
                    <br>

                    <div class="row">
                        <div class="col-sm-4">	
                            <label for="endereco" class="col-form-label">Endereço</label>
                            <input type="text"  name="endereco"  class="form-control form-control-sm inputs" disabled>
                        </div>
            
                        <div class="col-sm-4">	
                            <label for="numero" class="col-form-label">Numero</label>
                            <input type="text"  name="numero" inputmode="numeric" class="form-control form-control-sm inputs" disabled data-tipoDado="number">
                        </div>

                        <div class="col-sm-4">
                            <label for="provincia">Estado</label>
                            <input class="form-control" type="text" name="provincia" id="provincia" disabled data-tipoDado="string">
                        </div>
            
                        				
                    </div>

                    <br>
            
                    <div class="row">
                        <div class="col-sm-4">	
                            <label for="cep" class="col-form-label">CEP</label>
                            <input type="text"  name="cep" inputmode="numeric" class="form-control form-control-sm inputs" minlength="8" maxlength="8" OnKeyPress="formatar('###-####', this)" disabled data-tipoDado="number">
                        </div>
            
                        <div class="col-sm-4">	
                            <label for="complemento" class="col-form-label">Complemento</label>
                            <input type="text"  name="complemento" class="form-control form-control-sm inputs" disabled>
                        </div>	
            
                       	
            
                        <div class="col-sm-4">
                            <label for="cidade" class="col-form-label">Cidade</label>
                            <input class="form-control" type="text" name="cidade" id="cidade" disabled data-tipoDado="string">
                        </div>
                    </div>
            
                    <br>

                    <div class="row">
                        <div class="col-sm-4">
                            <label for="telefone1">Telefone</label>
                            <input class="form-control" type="text" inputmode="numeric"  name="telefone1" id="telefone1" placeholder="81 XXX XXXX-XXXX"  type="text" maxlength="16" pattern="\[0-9]{2}\ [0-9]{4,6}-[0-9]{3,4}$" minlength="16" OnKeyPress="formatar('## ### ####-####', this)" disabled data-tipoDado="number">
                          </div>
         
                          <div class="col-sm-4">
                            <label for="telefone2">Tel Fixo</label>
                            <input class="form-control" type="text" inputmode="numeric"  name="telefone2" id="telefone2" placeholder="XXXX XX XXXX"  type="text"  maxlength="12" pattern="\[0-9]{2}\ [0-9]{4,6}-[0-9]{3,4}$" minlength="12" OnKeyPress="formatar('#### ## ####', this)" disabled data-tipoDado="number">
                          </div>
                        <div class="col-sm-4">	
                            <label for="responsavel" class="col-form-label">Responsável</label>
                            <input type="text" name="responsavel" class="form-control form-control-sm inputs" disabled data-tipoDado="string">
                        </div>					
                    </div>

                    <br>
            
                   

                    <br>
            
                    <div class="row">
                        <div class="col-sm-12">	
                            <label for="observacao" class="col-form-label">Observação</label>	
                            <textarea class="form-control form-control-sm"  name="observacao" rows="3" disabled></textarea data-tipoDado="string">
                        </div>
                    </div>		
                
                <div class="modal-footer  bg-light" id="btns">
                    
                </div>
            </div>
        </form>


            <div name="List" >
                <div class="row">
                    <div class="col-sm-10" id="SearchBox">
                        <input class="form-control Produtos" type="text" placeholder="Digite o nome do fornecedor" name="Produtos">
                    </div>
    
                    <div class="col-sm-2"> 
                        <button class="btn btn-primary form-control" name="Produtos" id="search">
                          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                            <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
                          </svg>
                        </button>
                    </div>
    
                  </div>

              <br>

              <div class="row">
                  <div class="table-responsive" style="height: 50vh;">
                      <table class="table table-hover tablesorter table-sm table-bordered m-0 tabela" id="listaClientes">
                          <thead>
                              <tr class="listarCabecalho">
                                <th class="col-xs text-center header" scope="col">Código</th>
                                <th class="col-xs header headerSortDown" scope="col">Razão Social</th>
                                <th class="col-xs header" scope="col">Nome Fantasia</th>
                                <th class="col-xs header" scope="col">Cidade</th>
                                <th class="col-xs text-center header" scope="col">Estado</th>
                              </tr>
                          </thead>
                    <tbody>
          
                        <% object.forEach(function(row){ %>
                            <tr class="zebra grid">
  
                           
  
                           
                              <th scope="row" name="codigo" class="col-xs text-center"><%= row.id %></th>
                              <td class="col-xs"><%= row.razao_social %></td>
                              <td class="col-xs"><%= row.nome_fantasia %></td>
                              <td class="col-xs"><%= row.cidade %></td>
                              <td class="col-xs"><%= row.provincia %></td>
  
                            
                            </tr>
                            <% }); %>
                    </tbody>
                          <tfoot>
                          </tfoot>
                      </table>
                  </div>	
              </div> 
            </div>
        </div>
      </div>
    </div>
</div>
<%- include("inc/footer-scripts/footer-scripts")-%>
  </body>
</html>